<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.tgehring.itdb.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.tgehring.itdb.android.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.tgehring.itdb.android.todo.TodoListActivity"
            android:label="@string/title_activity_todo_list" >
        </activity>
        <activity
            android:name="de.tgehring.itdb.android.todo.TodoDetailActivity"
            android:label="@string/title_activity_todo_detail" >
        </activity>
        <activity
            android:name="de.tgehring.itdb.android.todo.TodoActivity"
            android:label="@string/title_activity_todo" >
        </activity>
        <activity
            android:name="de.tgehring.itdb.android.rechner.RechnerActivity"
            android:label="@string/title_activity_rechner" >
        </activity>
        <activity
            android:name="de.tgehring.itdb.android.rechner.RechnerDetailActivity"
            android:label="@string/title_activity_rechner_detail" >
        </activity>
        <activity
            android:name="de.tgehring.itdb.android.rechner.RechnerListActivity"
            android:label="@string/title_activity_rechner_list" >
        </activity>
        <activity
            android:name="de.tgehring.itdb.android.OptionsActivity"
            android:label="@string/title_activity_options" >
        </activity>
    </application>

</manifest>
